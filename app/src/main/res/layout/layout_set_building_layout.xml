<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/setBuildingLayout_editText_floorNumber"
        android:layout_above="@+id/setBuildingLayout_editText_numberOfRooms"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number of Rooms :"
        android:id="@+id/setBuildingLayout_textView_numberOfRooms"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/setBuildingLayout_editText_numberOfRooms"
        android:background="@drawable/rounded_edittext"
        android:layout_alignBottom="@+id/setBuildingLayout_textView_numberOfRooms"
        android:layout_toRightOf="@+id/setBuildingLayout_textView_numberOfRooms"
        android:layout_toEndOf="@+id/setBuildingLayout_textView_numberOfRooms"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Remove"
        android:id="@+id/setBuildingLayout_textView_remove"
        android:layout_alignBottom="@+id/setBuildingLayout_editText_floorNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickRemove"
        android:padding="10dp" />

</RelativeLayout>