<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".activities.buildingsetup.ViewAddedRoomsActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/view_added_rooms_backButton"
        android:contentDescription="@string/description"
        android:onClick="onClickBackButton"
        android:layout_gravity="top|start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/view_added_rooms_titleBar"
        android:layout_toStartOf="@+id/view_added_rooms_titleBar"
        android:src="@drawable/arrow_back"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"/>

    <TextView
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:id="@+id/view_added_rooms_titleBar"
        android:background="#2E9AFE"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="top"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/view_added_rooms_homeButton"
        android:contentDescription="@string/description"
        android:src="@drawable/home_icon"
        android:onClick="onClickHomeButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top|end"
        android:layout_toRightOf="@+id/view_added_rooms_titleBar"
        android:layout_toEndOf="@+id/view_added_rooms_titleBar"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Building Name"
        android:id="@+id/viewAddedRooms_textView_buildingName"
        android:layout_below="@+id/view_added_rooms_titleBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Floor Name"
        android:id="@+id/viewAddedRooms_textView_floorName"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/viewAddedRooms_textView_buildingName"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewAddedRooms_gridLayout_help"
        android:layout_below="@+id/viewAddedRooms_textView_floorName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#90EE90"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Single Occupancy"
            android:id="@+id/viewAddedRooms_textView_singleOccupancy"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_row="0"
            android:layout_column="2"
            android:background="#87CEFA"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Double Occupancy"
            android:id="@+id/viewAddedRooms_textView_doubleOccupancy"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#CD853F"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Triple Occupancy"
            android:id="@+id/viewAddedRooms_textView_tripleOccupancy"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#FF6347"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tetra Occupancy"
            android:id="@+id/viewAddedRooms_textView_tetraOccupancy"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="center" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewAddedRooms_gridLayout_roomsLayout"
        android:layout_below="@+id/viewAddedRooms_gridLayout_help"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></GridLayout>

</RelativeLayout>
