<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/layoutNotification_textView_notification"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="7.5dp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView_acknowledge"
        android:layout_below="@+id/layoutNotification_textView_notification"
        android:layout_alignParentStart="true"
        android:src="@drawable/acknowledged_icon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView_dismiss"
        android:layout_below="@+id/layoutNotification_textView_notification"
        android:layout_alignParentEnd="true"
        android:src="@drawable/dismiss_icon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Open"
        android:id="@+id/textView_status"
        android:layout_alignTop="@+id/imageView_acknowledge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />
</RelativeLayout>