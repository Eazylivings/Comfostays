<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView_eventIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="96dp"
        android:padding="5dp"
        android:src="@drawable/trip_event_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_eventNameHeading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@+id/imageView_eventIcon"
        android:text="Event Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_organizerNameHeading"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Organiser"
        android:layout_below="@+id/imageView_eventIcon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#152733" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_organizerName"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toEndOf="@+id/textView_organizerNameHeading"
        android:layout_below="@+id/imageView_eventIcon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textColor="#fa6e59" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_eventDateHeading"
        android:text="Date Of Event"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textView_organizerNameHeading"
        android:layout_marginStart="10dp"
        android:textColor="#152733" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_eventDate"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_below="@+id/textView_organizerNameHeading"
        android:layout_toEndOf="@+id/textView_eventDateHeading"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:textColor="#fa6e59" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_eventStatusHeading"
        android:text="Status"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/textView_eventDateHeading"
        android:layout_marginStart="10dp"
        android:textColor="#152733" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_eventStatus"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_below="@+id/textView_eventDate"
        android:layout_toEndOf="@+id/textView_eventStatusHeading"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:textColor="#fa6e59" />

</RelativeLayout>