<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.comfostays.activities.customer_activities.JoinPropertyActivity">

    <include android:id="@+id/layout_header"
        layout="@layout/layout_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView_joinProperty"
        android:layout_above="@+id/button_join"
        android:layout_below="@+id/layout_header"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Property Id"
                android:id="@+id/textView_propertyId"
                android:layout_marginTop="25dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/editText_propertyId"
                android:hint="PROPERTY ID"
                android:layout_alignStart="@+id/textView_propertyId"
                android:layout_marginStart="100dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
               android:layout_below="@+id/editText_propertyId"
                android:id="@+id/relativeLayout_buildingDetails"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name"
                    android:id="@+id/textView_propertyNameHeading"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView_propertyName"
                    android:layout_alignBottom="@+id/textView_propertyNameHeading"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Address"
                    android:id="@+id/textView_propertyAddressHeading"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView_propertyNameHeading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView_propertyAddress"
                    android:layout_alignBottom="@+id/textView_propertyAddressHeading"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Room Types"
                    android:id="@+id/textView_propertyRoomTypesHeading"
                    android:layout_below="@+id/textView_propertyAddress"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Small Text"
                    android:id="@+id/textView_propertyRoomTypes"
                    android:layout_below="@+id/textView_propertyAddress"
                    android:layout_alignStart="@+id/textView_propertyAddress" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/relativeLayout_buildingDetails"
                android:text="Medium Text"
                android:id="@+id/textView_customerNameHeading" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editText_customerName"
                android:layout_alignEnd="@+id/textView_customerNameHeading"
                android:layout_below="@+id/relativeLayout_buildingDetails"/>


        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/button_join"
        android:onClick="onClickJoin"
        android:background="#2E9AFE"
        android:textColor="@drawable/button_text_color"
        android:text="JOIN"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
