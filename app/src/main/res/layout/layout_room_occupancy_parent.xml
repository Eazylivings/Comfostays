<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutRoomOccupancyParent_imageView_dropDown"
        android:src="@drawable/ic_drop_down"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Room Number :"
        android:id="@+id/layoutRoomOccupancyParent_textView_roomNumberHeading"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/layoutRoomOccupancyParent_textView_roomNumber"
        android:layout_alignBottom="@+id/layoutRoomOccupancyParent_textView_roomNumberHeading"
        android:layout_toRightOf="@+id/layoutRoomOccupancyParent_textView_roomNumberHeading"
        android:layout_toEndOf="@+id/layoutRoomOccupancyParent_textView_roomNumberHeading"
        android:layout_marginLeft="10dp"
        android:padding="5dp" />

</RelativeLayout>