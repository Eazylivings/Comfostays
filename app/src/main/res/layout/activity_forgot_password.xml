<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.loginactivities.ForgotPasswordActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/forgot_password_backButton"
        android:contentDescription="@string/description"
        android:onClick="onClickBackButton"
        android:layout_gravity="top|start"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/forgot_password_titleBar"
        android:src="@drawable/arrow_back"
        android:layout_marginEnd="2dp" />

    <TextView
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:id="@+id/forgot_password_titleBar"
        android:background="#2E9AFE"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_gravity="top"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="An email along with your password will be sent to your registerd Email Id."
        android:id="@+id/forgotPassword_button_defaultMessage"
        android:layout_below="@+id/forgot_password_titleBar"
        android:textAlignment="center"
        android:textColor="#000000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:id="@+id/forgotPassword_editText_emailAddress"
        android:gravity="center"
        android:layout_marginTop="46dp"
        android:textColor="#000000"
        android:hint="Email Address"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/forgotPassword_button_defaultMessage"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/forgotPassword_button_retrievePassword"
        android:onClick="onClickRetrievePassword"
        android:background="#2E9AFE"
        android:textColor="@drawable/button_text_color"
        android:layout_marginTop="40dp"
        android:text="Retrieve Password"
        android:textSize="18dp"
        android:layout_below="@+id/forgotPassword_editText_emailAddress"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        android:gravity="center_horizontal"
        android:text="@string/new_user"
        android:id="@+id/forgotPassword_textView_newTo"
        android:onClick="onClickRegisterButton"
        android:textColor="#000000"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/forgotPassword_button_retrievePassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp"
        android:gravity="center"
        android:text="@string/signup"
        android:id="@+id/forgotPassword_link_signUp"
        android:onClick="onClickRegisterButton"
        android:textColor="#FF0000"
        android:layout_below="@+id/forgotPassword_textView_newTo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
