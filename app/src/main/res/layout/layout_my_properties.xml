<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_myProperties_imageView_propertyIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_property_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Property Name"
        android:id="@+id/layout_myProperties_textView_propertyName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/layout_myProperties_imageView_propertyIcon"
        android:layout_toEndOf="@+id/layout_myProperties_imageView_propertyIcon"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />
</RelativeLayout>