<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.comfostays.activities.MealsActivity$PlaceholderFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/fragmentMealsBreakfast_gridLayout_time"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/fragmentMealsBreakfast_textClock_startTime"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:id="@+id/fragmentMealsBreakfast_imageView_clock"
            android:contentDescription="@string/description"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/clock" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/fragmentMealsBreakfast_textClock_endTime"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="5dp" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentMealsBreakfast_gridLayout_time"
        android:layout_alignParentStart="true"
        android:id="@+id/fragmentMealsBreakfast_gridLayout_schedule"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/monday"
            android:id="@+id/fragmentMealsBreakfast_textView_monday"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fragmentMealsBreakfast_textView_mondayMenu"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tuesday"
            android:id="@+id/fragmentMealsBreakfast_textView_tuesday"
            android:layout_row="1"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fragmentMealsBreakfast_textView_tuesdayMenu"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/wednesday"
            android:id="@+id/fragmentMealsBreakfast_textView_wednesday"
            android:layout_row="2"
            android:layout_column="0"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:foregroundGravity="center" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fragmentMealsBreakfast_textView_wednesdayMenu"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/thursday"
            android:id="@+id/fragmentMealsBreakfast_textView_thursday"
            android:layout_row="3"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fragmentMealsBreakfast_textView_thursdayMenu"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/friday"
            android:id="@+id/fragmentMealsBreakfast_textView_friday"
            android:layout_row="4"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fragmentMealsBreakfast_textView_fridayMenu"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/saturday"
            android:id="@+id/fragmentMealsBreakfast_textView_saturday"
            android:layout_row="5"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fragmentMealsBreakfast_textView_saturdayMenu"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/sunday"
            android:id="@+id/fragmentMealsBreakfast_textView_sunday"
            android:layout_row="6"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fragmentMealsBreakfast_textView_sundayMenu"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_marginStart="20dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginBottom="5dp" />
    </GridLayout>

</RelativeLayout>
